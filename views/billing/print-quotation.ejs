              <td><%= data.quotations[0].quotationProducts[j].productId %></td>
              <td><img width = "300" height = "500" src="/dist/img/products/<%= data.quotations[0].quotationProducts[j].productId %>/0.jpg" class="img-fluid mb-2"/><br><b><%= data.quotations[0].quotationProducts[j].productName %></b></td>
