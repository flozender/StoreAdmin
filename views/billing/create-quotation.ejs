<script>
  $(function () {
    //Initialize Select2 Elements
    $('.select2').select2()
  })
</script>
<script>
  window.onload = function() {
document.getElementById('getQuot').className = 'nav-link active';
};
</script>
<script type="module" src="../../dist/js/js.cookie.mjs"></script>
<script type = "module">
// JQuery Change
import Cookies from '../../dist/js/js.cookie.mjs'


$( "#qCustName" ).change(function() {
  // alert( "Handler for .change() called." );
  let customerName = document.getElementById("qCustName").value;
  $.get("<%= data.serverRoute %>/customers/id/" + customerName, function(data, status){
    data = data[0];
    document.getElementById("qCustId").value = data.customerId;    
    document.getElementById("qCustAddress").value = data.customerAddress;     
    document.getElementById("qCustPhone").value = data.customerPh;
    });
});

$( "#qSubmit" ).click(function() {
  // alert( "Handler for .change() called." );



  let customerId = document.getElementById("qCustId").value;
  var txt = $('#qQuotId');  

  if (txt.val() != null && txt.val() != '') {  
    Cookies.set('customerId', customerId);
    Cookies.set('quotationId', txt.val());

    window.location = "<%= data.clientRoute %>/billing/quotation/add";
  
    } else {  
      alert('Please enter quotation ID');  
    }


});
</script>
</body>
</html>