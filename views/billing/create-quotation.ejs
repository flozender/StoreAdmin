<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <%- include ('../partials/header') %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Create Quotation</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/home">Home</a></li>
              <li class="breadcrumb-item active">Billing</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Customer Information</h3>

            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
              <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-remove"></i></button>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Quotation ID</label>
                  <input type="text" class="form-control" id = "qQuotId" style="width: 100%;" >
                </div>
                <div class="form-group">
                  <label>Customer ID</label>
                  <input type="text" class="form-control" id = "qCustId" style="width: 100%;" readonly>
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Customer Address</label>
                  <input type = "text" class="form-control" id = "qCustAddress" style="width: 100%;" readonly>
                </div>
                <!-- /.form-group -->
              </div>
              <!-- /.col -->
              <div class="col-md-6">
                <div class="form-group">
                  <label>Customer Name</label>
                  <select class="form-control select2" id = "qCustName" style="width: 100%;">
                    <option selected = "selected">-</option>
                    <% for (let i = 0; i < data.length; i++){ %>
                      <option value="<%= data[i].customerId %>"><%= data[i].customerName %></option val>
                      <% } %>
                  </select>
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                  <label>Customer Phone</label>
                  <input type = "text" class="form-control" id = "qCustPhone" style="width: 100%;" readonly>
                </div>
                <!-- /.form-group -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <button type="submit" id = "qSubmit" class="btn btn-primary">Proceed</button>
          </div>
        </div>
        <!-- /.card -->
        <div class="row">
          <div class="col-12">
            <!-- <div class="callout callout-info">
              <h5><i class="fas fa-info"></i> Note:</h5>
              This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
            </div> -->
          </div><!-- /.col -->
      </div><!-- /.container-fluid -->
      
      </div>
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper --> 
<%- include ('../partials/footer') %>

